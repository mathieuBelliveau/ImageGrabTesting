<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ImageGrabTesting.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="FilePicker Demo!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Button Text="Pick Image" Clicked="Button_Clicked" />
        <Image x:Name="resultImage" BackgroundColor="Red" WidthRequest="250" HeightRequest="250" Source="http://10.0.2.2:1234/BaconBurger.jpg"/>
    </StackLayout>

</ContentPage>
